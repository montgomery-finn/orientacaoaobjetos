@model ClinicaVeterinaria.Models.ViewModels.CaixaViewModel


@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>


<h4>Entrada do Caixa</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Caixa.Valor" class="control-label"></label>
                <input asp-for="Caixa.Valor" class="form-control" />
                <span asp-validation-for="Caixa.Valor" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Caixa.Descricao" class="control-label"></label>
                <input asp-for="Caixa.Descricao" class="form-control" />
                <span asp-validation-for="Caixa.Descricao" class="text-danger"></span>
            </div>





            <div class="form-group">
                <label asp-for="Caixa.ConsultaId" class="control-label"></label>
                <select asp-for="Caixa.ConsultaId" asp-items="@(new SelectList(Model.Consultas, "Id", "DataConsulta"))"
                        class="form-control"></select>
            </div>

            <div class="form-group">
                <label asp-for="Caixa.AnimalId" class="control-label"></label>
                <select asp-for="Caixa.AnimalId" asp-items="@(new SelectList(Model.Animals, "Id", "NomeAnimal"))"
                        class="form-control"></select>
            </div>

            <div class="form-group">
                <label asp-for="Caixa.ProprietarioId" class="control-label"></label>
                <select asp-for="Caixa.ProprietarioId" asp-items="@(new SelectList(Model.Proprietarios, "Id", "NomeProprietario"))"
                        class="form-control"></select>
            </div>



            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>


        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

