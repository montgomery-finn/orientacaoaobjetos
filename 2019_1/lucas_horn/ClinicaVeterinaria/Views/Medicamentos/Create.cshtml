@model ClinicaVeterinaria.Models.ViewModels.MedicamentoFormViewModel




@{
    ViewData["Title"] = "Create";
}

<h2>@ViewData["Title"]</h2>

<h4>Medicamento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>


            <div class="form-group">
                <label asp-for="Medicamento.NomeMedicamento" class="control-label"></label>
                <input asp-for="Medicamento.NomeMedicamento" class="form-control" />
                <span asp-validation-for="Medicamento.NomeMedicamento" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Medicamento.DescricaoMedicamento" class="control-label"></label>
                <input asp-for="Medicamento.DescricaoMedicamento" class="form-control" />
                <span asp-validation-for="Medicamento.DescricaoMedicamento" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Medicamento.Valor" class="control-label"></label>
                <input asp-for="Medicamento.Valor" class="form-control" />
                <span asp-validation-for="Medicamento.Valor" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Medicamento.AnimalId" class="control-label"></label>
                <select asp-for="Medicamento.AnimalId" asp-items="@(new SelectList(Model.Animals,"Id","NomeAnimal"))"
                        class="form-control"></select>
            </div>


            <div class="form-group">
                <label asp-for="Medicamento.ProprietarioId" class="control-label"></label>
                <select asp-for="Medicamento.ProprietarioId" asp-items="@(new SelectList(Model.Proprietarios,"Id","NomeProprietario"))"
                        class="form-control"></select>
            </div>


            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>


        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

