@model ClinicaVeterinaria.Models.ViewModels.ProprietarioFormViewModel



@{
    ViewData["Title"] = "Edit";
}

<h2>@ViewData["Title"]</h2>

<h4>Proprietario</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Proprietario.Id" />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Proprietario.NomeProprietario" class="control-label"></label>
                <input asp-for="Proprietario.NomeProprietario" class="form-control" />
                <span asp-validation-for="Proprietario.NomeProprietario" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Proprietario.Email" class="control-label"></label>
                <input asp-for="Proprietario.Email" class="form-control" />
                <span asp-validation-for="Proprietario.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Proprietario.Telefone" class="control-label"></label>
                <input asp-for="Proprietario.Telefone" class="form-control" />
                <span asp-validation-for="Proprietario.Telefone" class="text-danger"></span>
            </div>




            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>


        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


