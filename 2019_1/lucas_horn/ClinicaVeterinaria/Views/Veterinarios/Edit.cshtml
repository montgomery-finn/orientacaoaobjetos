@model ClinicaVeterinaria.Models.ViewModels.VeterinarioFormViewModel
@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>


<h4>Veterinario</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Veterinario.Id" />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Veterinario.Nome" class="control-label"></label>
                <input asp-for="Veterinario.Nome" class="form-control" />
                <span asp-validation-for="Veterinario.Nome" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Veterinario.CPF" class="control-label"></label>
                <input asp-for="Veterinario.CPF" class="form-control" />
                <span asp-validation-for="Veterinario.CPF" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Veterinario.Registro" class="control-label"></label>
                <input asp-for="Veterinario.Registro" class="form-control" />
                <span asp-validation-for="Veterinario.Registro" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Veterinario.Email" class="control-label"></label>
                <input asp-for="Veterinario.Email" class="form-control" />
                <span asp-validation-for="Veterinario.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Veterinario.Celular" class="control-label"></label>
                <input asp-for="Veterinario.Celular" class="form-control" />
                <span asp-validation-for="Veterinario.Celular" class="text-danger"></span>
            </div>




            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>


        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

